{
    "manifest_version": 2,
    "name": "Dota 2 Blog Update Plugin",
    "description": "This extension will popup dota 2 blog update when available",
    "version": "0.0.1",
    "browser_action": {
        "default_icon": "logo.jpg",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "./lib/jquery.min.js",
            "updater.js",
            "background.js"
        ]
    },
    "permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "./lib/jquery.min.js"
            ],
            "css": []
        }
    ]
}